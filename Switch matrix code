
module SwitchMatrix(
       input [3:0] in_signals,
       input [7:0] config_bits,  // 2bits per output
       output [3:0] out_signals
    );
    
    assign out_signals[0] = in_signals[config_bits[1:0]];
    assign out_signals[1] = in_signals[config_bits[3:2]];
    assign out_signals[2] = in_signals[config_bits[5:4]];
    assign out_signals[3] = in_signals[config_bits[7:6]];
    
    
endmodule
